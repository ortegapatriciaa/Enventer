<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp"
                android:src="@drawable/logo_2" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E(n)venter is application that will help you handling your different upcoming events without consuming lots of paper and in an easiest way. This application also shows you different upcoming events that you can enjoy by yourself or with your friends."
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-3dp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E(n)venter is a simple application that makes your work easy."
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="6dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@color/colorBlue1"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vision"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginTop="-35dp"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E(n)venter envisions itself to be a helpful application to our valued customers and to produce an easiest and productive way of creating an event for different event organizers, and an application that will contribute to our society. "
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@color/colorBlue1"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mission"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginTop="-35dp"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E(n)venter is committed to produce an easiest way of finding and creating an event through mobile application without wasting lots of paper that can also be helpful in our environment, keeping an event staff informed with the current event with a correct information and to allow an event organizer to create, delete and edit an event."
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>